# Database Configuration
DATABASE_URL=postgresql://postgres:your_db_password@postgres:5432/cinemaos
DB_NAME=cinemaos
DB_USER=postgres
DB_PASSWORD=your_secure_db_password_here
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_min_32_characters_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000

# URLs
API_URL=http://localhost:5000
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WS_URL=ws://localhost:5000
APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Stripe Payment Gateway
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@cinemaos.com
SUPPORT_EMAIL=support@cinemaos.com

# The Movie Database API (for movie data)
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3

# Logging
LOG_LEVEL=debug

# Session
SESSION_SECRET=your_session_secret_min_32_characters

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

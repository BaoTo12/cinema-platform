# CinemaOS Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
CINEMAOS_APP_ENVIRONMENT=development
CINEMAOS_APP_DEBUG=true

# Server
CINEMAOS_SERVER_HOST=0.0.0.0
CINEMAOS_SERVER_PORT=8080

# Database (PostgreSQL)
CINEMAOS_DATABASE_HOST=localhost
CINEMAOS_DATABASE_PORT=5432
CINEMAOS_DATABASE_USER=postgres
CINEMAOS_DATABASE_PASSWORD=postgres
CINEMAOS_DATABASE_NAME=cinemaos
CINEMAOS_DATABASE_SSL_MODE=disable

# Redis
CINEMAOS_REDIS_HOST=localhost
CINEMAOS_REDIS_PORT=6379
CINEMAOS_REDIS_PASSWORD=

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
CINEMAOS_JWT_ACCESS_SECRET=your-super-secret-access-key-change-me
CINEMAOS_JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me

# Email (for password reset)
CINEMAOS_EMAIL_SMTP_HOST=smtp.gmail.com
CINEMAOS_EMAIL_SMTP_PORT=587
CINEMAOS_EMAIL_SMTP_USER=your-email@gmail.com
CINEMAOS_EMAIL_SMTP_PASSWORD=your-app-password
CINEMAOS_EMAIL_FROM_ADDRESS=noreply@cinemaos.com
CINEMAOS_EMAIL_FRONTEND_URL=http://localhost:3000

# Tracing (OpenTelemetry)
CINEMAOS_TRACER_ENABLED=false
CINEMAOS_TRACER_ENDPOINT=localhost:4317

# Logging
CINEMAOS_LOGGER_LEVEL=debug
CINEMAOS_LOGGER_FORMAT=console
